{
    "name": "aws-nodejs-typescript",
    "version": "1.0.0",
    "description": "Serverless webpack example using Typescript",
    "main": "handler.js",
    "scripts": {
        "test": "jest --detectOpenHandles",
        "lint": "node_modules/.bin/eslint .",
        "lint:fix": "node_modules/.bin/eslint . --fix",
        "deploy": "npm run test && serverless deploy",
        "deploy:prod": "serverless deploy",
        "deploy:dev": "serverless deploy --stage dev --enabled false",
        "package:dev": "serverless package --stage dev --enabled false"
    },
    "dependencies": {},
    "devDependencies": {
        "@types/aws-lambda": "8.10.1",
        "@types/node": "^8.0.57",
        "aws-lambda-mock-context": "^3.2.1",
        "source-map-support": "^0.5.6",
        "ts-loader": "^4.2.0",
        "typescript": "^2.9.2",
        "webpack": "^4.5.0",
        "jest": "^23.5.0",
        "serverless": "^1.30.0",
        "serverless-iam-roles-per-function": "^1.0.2",
        "serverless-mocha-plugin": "^1.8.3",
        "serverless-webpack": "^5.2.0"
    },
    "jest": {
        "testURL": "http://localhost/",
        "transform": {
            "^.+\\.tsx?$": "ts-jest"
        },
        "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
        "moduleFileExtensions": [
            "ts",
            "tsx",
            "js",
            "jsx",
            "json",
            "node"
        ]
    },
    "author": "Choose",
    "license": "MIT"
}
